
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<CarBlog2.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Table.cshtml";
}

<h1>Danh Sách Bài Viết</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Tiêu Đề
            </th>
              <th>
                Danh Mục
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tite)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Cast.CastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="box" aria-label="Page navigation example">
    <ul class="pagination">
       <pager class="pager-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4Full" asp-action="Index" asp-controller="Posts" asp-route-query="@Model" />

    </ul>
</div>